mixin build_info_table(categories, componentList, showSel, showRmv)
  section.bld_tb_cont 
    div.bld_tb_header
      p Component
      p Selection
      p Price
      p Buy

    each ctgy in categories 
      div.bld_tb_row
        div.flex.bld_tb_row_lbl
          a(href=`/category/${ctgy._id}`).ctgy_name= ctgy.name
          div.show_mob.bld_tb_lbl_line

        //- If we have a product
        if componentList[ctgy.name]
          div.flex.sel_prod 
            a(href=`/products/${componentList[ctgy.name]._id}`)
              img(src=componentList[ctgy.name].image_url)
            a(href=`/products/${componentList[ctgy.name]._id}`)
              | #{componentList[ctgy.name].short_name}

          p.prod_price 
            span.show_mob Price
            | $#{componentList[ctgy.name].price}

          div.flex.prod_actions
            a(href=componentList[ctgy.name].buy_link target="_blank").btn.flex.buy_btn
              span.show_mob Buy
              object(type="image/svg+xml" data="/images/products/amazon.svg")

            if showRmv 
              form(method="POST" action="/builds/create/deleteComponent")
                input(type='text' name='ctgyId' value=ctgy._id).hidden
                button.btn.flex.remove_btn
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" /></svg>
                  span.show_mob Remove

        //- If we don't have a product
        else 
          if showSel 
            a(href=`/category/${ctgy._id}`).btn.ign_a_hov.selection_btn
              | + Choose a #{ctgy.name}
          else
            span -